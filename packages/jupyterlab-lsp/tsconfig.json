{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2015", "dom"],
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "target": "es2015",
    "types": ["jest"],
    "tsBuildInfoFile": "lib/.tsbuildinfo"
  },
  "include": ["src/**/*"]
}
